@{
  Layout = "_Layout"; 
}
<header>
  <p id="stylist-create">@Html.ActionLink("Add new Stylist", "Create")</p>
</header>
<main>
@using Salon.Models;

<h1>Stylists</h1>

<h4>Currently employed Stylists</h4>

@if (@Model.Count == 0)
{
  <p><em>Looks like there aren't any employees yet.</em></p>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
</main>