@{
  Layout = "_Layout"; 
}

<header>
  <p id="client-list">@Html.ActionLink("Show All Clients", "Index", "Clients")</p>
</header>

@model Salon.Models.Client

<main>
  <h4>Add a new task</h4>

  <label for="client">Name:</label>
  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.ClientName)

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Add new Client" class="btn btn-default" required/>
  }
</main>