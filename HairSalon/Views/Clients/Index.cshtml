@{
  Layout = "_Layout"; 
}

<header>
  <p id="client-create">@Html.ActionLink("Add a Client to list of Clients", "Create")</p>
</header>

@using Salon.Models;
@model List<Salon.Models.Client>;

<main>
  <h1>CLIENTS</h1>

  <h4>Current Clientel:</h4>

  @if (@Model.Count == 0)
  {
    <p><em>Looks like there aren't any customers yet.</em></p>
  } 

  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | @client.Stylist.StylistName</li>
  }
</main>